@Type AP
@Constructor
byVar[x] = y : string, AP

byVar[x] = y new AP,
Ble(y, x) <- x = "abc".

@Constructor
byFld[x, y] = z : string, string, AP

byVar[x] = y new AP,
Foo(y, x), Baz(x), BarBaz(y) <- x = "abc".

@type AP2 <: AP

byFld[x, y] = z new AP2,
Foo2(z), Baz2(y, x) <- x = "x2", y = "f1".

@Plan(plan = "1:(1,2)")
Planned(x) <- Foo(_, x), Baz(x).

