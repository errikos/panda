@Entity Shape
@Entity Circle -> Shape
@Entity Triangle -> Shape
@Constructor
cons:Shape[x] = y -> string(x), Shape(y).

// string x Circle
new<<cons:Shape[x] = y as Circle>>,
PredC(x, y) <- x = "circle".

// string x RightTriangle
new<<cons:Shape[x] = y as RightTriangle>>,
PredT(x, y) <- x = "triangle".

// Shape
Pred(x) <- PredC(_, x).
Pred(x) <- PredT(_, x).

@Entity RightTriangle -> Triangle
